extends layout

block content
    each course in courses
        a.course-item(href=course.urlslug)
            .title= course.title
            .author= course.author
    
    style.
        .course-item {
            display: block;
            height: 68px;
            border-bottom: 1px #CCC solid;
            font-family: DroidSans, sans-serif;
            cursor: pointer;
        }

        .course-item .title {
            font-size: 18px;
            color: #383838;
            padding: 9px 15px;
            line-height: 1.4;
        }

        .course-item .author {
            padding: 0px 16px 13px;
            margin-top: -6px;
            color: #868686;
            font-size: 13px;
        }


